<% layout('/layouts/boilerplate') %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create new listing</h3>
            <br><br>
            <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Enter title</label>
                    <input 
                        name="listing[title]" 
                        type="text" 
                        placeholder="Add a catchy title" 
                        class="form-control"
                        required
                        >
                    <div class="valid-feedback">Title looks cool</div>
                    <div class="invalid-feedback">Enter the name</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea 
                        name="listing[description]" 
                        rows="8" 
                        placeholder="Enter description" 
                        class="form-control"
                        required
                        ></textarea>
                    <div class="invalid-feedback">Please fill the description</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" 
                        type="file"
                        class="form-control"
                        required
                        >
                    <div class="invalid-feedback">Image is necessary to attrack your customer</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" 
                            placeholder="1200" 
                            class="form-control"
                            required
                            >
                        <div class="invalid-feedback">Bhai dhandha karna hai naa??</div>
                    </div>

                    <div class="mb-3 col-8">
                        <label for="country" class="form-label">Country</label>
                        <input 
                            name="listing[country]" 
                            type="text" 
                            placeholder="India" 
                            class="form-control"
                            required
                            >
                        <div class="invalid-feedback">Renndo fir</div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input 
                        name="listing[location]" 
                        type="text" 
                        placeholder="Ahmedabad, Gujarat" 
                        class="form-control"
                        required
                        >
                    <div class="invalid-feedback">Kyu bhai, tum pick services bhi dete ho</div>
                </div>

                <br>
                <button class="btn btn-danger">Add</button>
                <br><br>
            </form>
        </div>
    </div>
</body>
