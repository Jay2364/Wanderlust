<% layout('/layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <h1>Signup in WanderLust</h1>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3 mt-4">
                <label for="username" class="form-label">Username</label>
                <input 
                    name="username"
                    id="username" 
                    type="text" 
                    placeholder="xyz" 
                    class="form-control"
                    required
                    >
                <div class="valid-feedback">username looks cool</div>
                <div class="invalid-feedback">Enter the username</div>
            </div>
            <div class="mb-3 mt-4">
                <label for="email" class="form-label">Email</label>
                <input 
                    name="email"
                    id="email" 
                    type="email" 
                    placeholder="xyz@gmail.com" 
                    class="form-control"
                    required
                    >
                <div class="valid-feedback">email looks cool</div>
                <div class="invalid-feedback">Enter the email</div>
            </div>
            <div class="mb-3 mt-4">
                <label for="password" class="form-label">Password</label>
                <input 
                    name="password"
                    id="password" 
                    type="password" 
                    placeholder="Password" 
                    class="form-control"
                    required
                    >
                <div class="valid-feedback">Valid password</div>
                <div class="invalid-feedback">Enter the password</div>
            </div>

            <button class="btn btn-success mb-3">Signup</button>

        </form>
    </div>
</div>